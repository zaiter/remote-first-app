<div class="col-md-4 col-md-offset-4">
  
  <h2>註冊 Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">	
        <%= f.input :email,label: '電子郵件', input_html: { class: "form-control"}, required: true, autofocus: true %>
        <%= f.input :name, input_html: { class: "form-control"},  required: true %>
        <%= f.input :password, input_html: { class: "form-control"}, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
        <%= f.input :password_confirmation, input_html: { class: "form-control"}, required: true %>
      </div>
      <hr>
      <div class="form-actions">
        <%= f.button :submit,"Sign up" %>
      </div>
    <% end %>
  <%= render "devise/shared/links" %>

</div>
