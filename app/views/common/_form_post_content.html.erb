  <%= simple_form_for [@group,@post] do |f| %>
    <div class="form-group">
    	<%= f.input :content, input_html: { class: "form-control", rows: 8} %>
    </div>
    <div class="checkbox">
    	<% if @post.private_status == true %>
    		<%= f.input :private_status,as: :boolean,inline_label: '私密留言',label:false, :input_html => { :checked => true } %>
    	<% else %>
    		<%= f.input :private_status,as: :boolean,inline_label: '私密留言',label:false, :input_html => { :checked => false }%>
    	<% end %>
    </div>
    <div class="form-actions">
    	<%= f.submit "Submit", disable_with: "Submiting...", class: "btn btn-primary"%>
    </div>
  <% end %>