<div class="col-md-12">

  <%= form_tag groups_path, method: :get do %>
      <%= text_field_tag :search, params[:search], placeholder: "Search" %>
  <% end %>

  <table class="table table-hover">
    <thead>
      <tr class="info">
        <th>#</th>
        <th>Title</th>
        <th>Description</th>
        <th>
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
          <span class="label label-danger">Info</span>
        </th>
      </tr>
    </thead>
    <tbody>

      <%= link_to("New group", new_group_path , :class => "btn btn-info pull-right") %>
      <h3> " Welcome Engineer ! "</h3>
      <%= render :partial => "common/group", :collection => @groups, :as => :group %>
    </tbody>
  </table>
</div>
